@page "/Tickets"
@using Models.Tickets;

<TicketSideMenu />
<HeadContent>
</HeadContent>
<div class="w3-main w3-container" style="margin-left:100px;">
    <!-- Ticket overview panel -->
    <div class="w3-row">
        <div class="w3-col m3 w3-padding">
            <div class="w3-card w3-container w3-black w3-display-container w3-mobile" style="height:200px; width:100%;">
                Will contain pie chart of the ratio of each ticket category.
            </div>
        </div>
        <div class="w3-col m6 w3-padding">
            <div class="w3-card w3-container w3-black w3-display-container w3-mobile" style="height:200px; width:100%;">
                Will contain line chart of number of ticket solved each day.
            </div>
        </div>
        <div class="w3-col m3" style="height:200px; overflow-y:scroll; overflow-x:hidden;">
            <h1 class="w3-container">Ticket category</h1>
            <div class="w3-bar">
                <div class="w3-bar-item" style="width:100px; height:100px;">
                    <div class="w3-display-container w3-red" style="width:100%; height:100%;">
                        <span class="w3-display-middle w3-xlarge">
                            20
                        </span>
                        <span class="w3-display-bottomleft w3-block w3-center"style="margin-bottom:4px;">Error</span>
                    </div>
                </div>
                <div class="w3-bar-item" style="width:100px; height:100px;">
                    <div class="w3-display-container w3-red" style="width:100%; height:100%;">
                        <span class="w3-display-middle w3-xlarge" style="margin-bottom:8px;">
                            20
                        </span>
                        <span class="w3-display-bottomleft w3-block w3-center" style="margin-bottom:4px;">Warning</span>
                    </div>
                </div>
                <div class="w3-bar-item" style="width:100px; height:100px;">
                    <div class="w3-display-container w3-green" style="width:100%; height:100%;">
                        <span class="w3-display-middle w3-xlarge" style="margin-bottom:8px;">
                            20
                        </span>
                        <span class="w3-display-bottomleft w3-block w3-center" style="margin-bottom:4px;">Solved</span>
                    </div>
                </div>
                <div class="w3-bar-item" style="width:100px; height:100px;">
                    <div class="w3-display-container w3-green" style="width:100%; height:100%;">
                        <span class="w3-display-middle w3-xlarge" style="margin-bottom:8px;">
                            20
                        </span>
                        <span class="w3-display-bottomleft w3-block w3-center" style="margin-bottom:4px;">In Progress</span>
                    </div>
                </div>
                <div class="w3-bar-item" style="width:100px; height:100px;">
                    <div class="w3-display-container w3-green" style="width:100%; height:100%;">
                        <span class="w3-display-middle w3-xlarge" style="margin-bottom:8px;">
                            20
                        </span>
                        <span class="w3-display-bottomleft w3-block w3-center" style="margin-bottom:4px;">Canceled</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-quarter w3-container">
            <div class="w3-card">
                <div class="w3-bar">
                    <h2 class="w3-bar-item">Newest tickets</h2>
                    <button type="button" class="w3-bar-item w3-right w3-button w3-transparent" @onclick="RefreshNewestTickets"><span class="material-symbols-sharp">refresh</span></button>

                </div>
                <ul class="w3-ul">
                    @list
                    @code{
                        public string list {set; get;}
                        private void RefreshNewestTickets(){
                            for(int i = 0; i < 5; i++){
                                list += "<li>New List " + i.ToString() + "</li>\n";
                            }
                        }
                    }
                </ul>
            </div>
        </div>
        <div class="w3-quarter w3-container">
            <div class="w3-card">
                <h2 class="w3-container">Highest priority tickets</h2>
            </div>
        </div>
        <div class="w3-quarter w3-container">
            <div class="w3-card">
                <h2>Longest unsolvet tickets</h2>
            </div>
        </div>
        <div class="w3-quarter w3-container">
            <div class="w3-card">
                <h2 class="w3-container">Newly solved tickets</h2>
            </div>
        </div>
    </div>
</div>>


