@using Models.Comments;

<div class="w3-bar-item w3-card w3-round w3-margin-top">
    <div class="w3-row">
        <div class="w3-col w3-right w3-mobile w3-text-gray" style="width:100px;">
            <div class="w3-tiny">
                <span class="">
                    @Tools.Misc.DateTimeToStringConverter.Convert(Comment.DateCreated)
                </span>
            </div>
            <div>
                <span class="">
                    @Comment.DateCreated.ToLocalTime().ToShortTimeString()
                </span>
            </div>
            <div class="w3-margin-top">
                <button type="button" class="w3-block w3-button w3-hover-red w3-ripple w3-round w3-border w3-border-black w3-hover-border-red"><span class="material-symbols-sharp">delete</span></button>
            </div>
        </div>
        <div class="w3-rest w3-mobile">
            <span>@Comment.CommentText</span>
        </div>
    </div>
</div>

@code{
    [Parameter]
    public Comment? Comment {set; get;}

    protected override Task OnParametersSetAsync()
    {
        return base.OnParametersSetAsync();
    }
}