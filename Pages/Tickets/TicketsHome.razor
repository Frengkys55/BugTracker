@page "/Tickets"
@using Models.Tickets;
@using Microsoft.AspNetCore.Components.Rendering;
@using BugTracker.Pages.Tickets.Components;

<NavMenu />
<HeadContent>
</HeadContent>
<div>
    <!-- Ticket overview panel -->
    <div class="w3-row">
        <div class="w3-col l6 w3-padding">
            <div class="w3-card w3-container w3-round w3-center w3-display-container w3-mobile" style="height:500px; width:100%;">
                <TicketsPieChartRatio />
            </div>
        </div>
        <div class="w3-col l6 w3-padding">
            <div class="w3-card w3-container w3-black w3-display-container w3-mobile" style="height:500px; width:100%;">
                <BugTracker.Pages.Tickets.Components.DailySolvedTicket />
            </div>
        </div>
    </div>
    <div class="w3-row">
        <div class="w3-col l3">
            <div class="w3-card w3-margin" style="height:192.5px;">
                <div class="w3-bar">
                    <span class="w3-bar-item"><b>Newest tickets</b></span>
                </div>
                <NewestTickets />
            </div>
        </div>
        <div class="w3-col l3">
            <div class="w3-card w3-margin" style="height:192.5px;">
                <div class="w3-bar">
                    <span class="w3-bar-item"><b>Highest priority tickets</b></span>
                </div>
                <div class="w3-block" style="height: calc( 100% - 38.5px );">
                    <HighestPriorityTickets />
                </div>
            </div>
        </div>
        <div class="w3-col l3">
            <div class="w3-card w3-margin" style="height:192.5px;">
                <div class="w3-bar">
                    <span class="w3-bar-item"><b>Longest unsolved tickets</b></span>
                </div>
                <LongestUnsolvedTicketCard />
            </div>
        </div>
        <div class="w3-col l3">
            <div class="w3-card w3-margin" style="height:192.5px;">
                <div class="w3-bar">
                    <span class="w3-bar-item"><b>Newly solved tickets</b></span>
                </div>
                <NewlySolvedTickets />
            </div>
        </div>
    </div>
    <div class="w3-container" style="height:500px; width:100%;">
        <AllTickets />
    </div>
</div>


