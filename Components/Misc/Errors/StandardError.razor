<div class="w3-card w3-round">
    <div class="w3-cell-row">
        <div class="w3-cell">
            <img src="/images/69a6b00a04b341828841fba193a51ee5_4970450105616380596.jpg" class="w3-image" style="height:200px;" />
        </div>
        <div class="w3-cell w3-cell-middle">
            <header>
                <span class="w3-xxlarge">@Title</span>
            </header>
            <div>
                @Message
            </div>
        </div>
    </div>
</div>

@code{
    [Parameter]
    public string Title {set; get;}

    [Parameter]
    public string? Message {set; get;}
}