<div class="w3-round" style="width:100%; height:100%;">
    <div class="w3-display-container" style="width:100%; height:calc( 100% - 38.5px );">
        @if(WithImage){
            <div class="w3-display-left w3-block w3-center">
                <img src="/images/69a6b00a04b341828841fba193a51ee5_4970450105616380596.jpg" class="w3-image" style="height:20%;" /><br />
            </div>
        }
        <div class="w3-display-middle w3-block w3-center">
            @Message
        </div>
    </div>
</div>

@code{
    [Parameter]
    public bool WithImage {set; get;} = false;

    [Parameter]
    public string? Message {set; get;}
}